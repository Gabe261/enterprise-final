@* Views/Home/Index.cshtml *@

<!DOCTYPE html>
<html>
<head>
    <title>Home - Task Collaboration</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
            background: #fafafa;
            padding: 40px 20px;
        }

        .container {
            max-width: 800px;
            margin: 0 auto;
            background: white;
            padding: 40px;
            border-radius: 8px;
            border: 1px solid #e6e6e6;
        }

        h1 {
            color: #1a1a1a;
            margin-bottom: 32px;
            font-size: 32px;
            text-align: center;
        }

        .info-box {
            background: #f9f9f9;
            padding: 20px;
            border-radius: 4px;
            margin-bottom: 20px;
            border-left: 4px solid #1a8917;
        }

        .info-label {
            font-weight: 600;
            color: #1a1a1a;
            margin-bottom: 8px;
            font-size: 14px;
        }

        .info-value {
            color: #757575;
            font-size: 14px;
            word-break: break-all;
            font-family: 'Courier New', monospace;
            background: white;
            padding: 12px;
            border-radius: 4px;
            border: 1px solid #e6e6e6;
        }

        .success-icon {
            text-align: center;
            font-size: 64px;
            margin-bottom: 24px;
        }

        .btn {
            display: inline-block;
            padding: 12px 24px;
            background: #1a8917;
            color: white;
            text-decoration: none;
            border-radius: 99px;
            font-weight: 500;
            transition: all 0.2s;
            margin-top: 20px;
        }

            .btn:hover {
                background: #156d13;
            }
    </style>
</head>
<body>
    <div class="container">
        <div class="success-icon">✅</div>
        <h1>Login Successful!</h1>

        <div class="info-box">
            <div class="info-label">📧 Email</div>
            <div class="info-value">@ViewBag.Email</div>
        </div>

        <div class="info-box">
            <div class="info-label">👤 Name</div>
            <div class="info-value">@ViewBag.Name (User Name: @ViewBag.UserName)</div>
        </div>

        <div class="info-box">
            <div class="info-label">🔑 Role</div>
            <div class="info-value">@ViewBag.Role</div>
        </div>

        <div class="info-box">
            <div class="info-label">🔑 JWT Token</div>
            <div class="info-value">@ViewBag.Token</div>
        </div>

        <div style="text-align: center;">
            <a href="/Login/Index" class="btn">Logout</a>
        </div>
    </div>
</body>
</html>
