@{
    ViewData["Title"] = "Login";
}

<!DOCTYPE html>
<html>
<head>
    <title>Login - Task Collaboration</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
            background: #fafafa;
            min-height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            padding: 20px;
        }

        .login-container {
            background: #ffffff;
            padding: 48px 40px;
            border-radius: 4px;
            border: 1px solid #e6e6e6;
            max-width: 420px;
            width: 100%;
        }

        .logo {
            text-align: center;
            margin-bottom: 32px;
        }

        .logo-text {
            font-size: 42px;
            font-weight: 700;
            color: #1a1a1a;
            letter-spacing: -1px;
        }

        h2 {
            text-align: center;
            color: #1a1a1a;
            margin-bottom: 8px;
            font-size: 28px;
            font-weight: 600;
            letter-spacing: -0.5px;
        }

        .subtitle {
            text-align: center;
            color: #757575;
            margin-bottom: 32px;
            font-size: 16px;
            font-weight: 400;
            line-height: 1.5;
        }

        .form-group {
            margin-bottom: 20px;
        }

        label {
            display: block;
            margin-bottom: 8px;
            font-weight: 400;
            color: #1a1a1a;
            font-size: 14px;
        }

        input {
            width: 100%;
            padding: 12px 14px;
            border: 1px solid #e6e6e6;
            border-radius: 4px;
            font-size: 16px;
            transition: all 0.2s;
            background: #ffffff;
            color: #1a1a1a;
        }

            input:focus {
                outline: none;
                border-color: #1a8917;
                background: #f9f9f9;
            }

            input::placeholder {
                color: #b3b3b3;
            }

        .btn {
            width: 100%;
            padding: 12px;
            background: #1a8917;
            color: white;
            border: none;
            border-radius: 99px;
            cursor: pointer;
            font-size: 16px;
            font-weight: 500;
            transition: all 0.2s;
            letter-spacing: 0.2px;
        }

            .btn:hover {
                background: #156d13;
            }

            .btn:active {
                transform: scale(0.98);
            }

        .divider {
            text-align: center;
            margin: 32px 0;
            color: #b3b3b3;
            font-size: 14px;
            font-weight: 400;
            position: relative;
        }

            .divider::before,
            .divider::after {
                content: '';
                position: absolute;
                top: 50%;
                width: 42%;
                height: 1px;
                background: #e6e6e6;
            }

            .divider::before {
                left: 0;
            }

            .divider::after {
                right: 0;
            }

        .google-btn {
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 12px;
            width: 100%;
            padding: 12px;
            background: #ffffff;
            border: 1px solid #e6e6e6;
            border-radius: 99px;
            cursor: pointer;
            font-size: 16px;
            font-weight: 500;
            color: #1a1a1a;
            text-decoration: none;
            transition: all 0.2s;
        }

            .google-btn:hover {
                background: #f9f9f9;
                border-color: #d6d6d6;
            }

            .google-btn:active {
                transform: scale(0.98);
            }

        .google-icon {
            width: 20px;
            height: 20px;
        }

        .message {
            padding: 12px 16px;
            margin-bottom: 20px;
            border-radius: 4px;
            font-size: 14px;
            font-weight: 400;
            display: none;
            animation: fadeIn 0.3s ease;
        }

        @@keyframes fadeIn {
            from {
                opacity: 0;
            }

            to {
                opacity: 1;
            }
        }

        .error {
            background: #fef2f2;
            color: #dc2626;
            border: 1px solid #fecaca;
        }

        .success {
            background: #f0fdf4;
            color: #16a34a;
            border: 1px solid #bbf7d0;
        }

        .info-box {
            margin-top: 32px;
            padding: 16px;
            background: #f9f9f9;
            border-radius: 4px;
            font-size: 14px;
            color: #757575;
            text-align: center;
            line-height: 1.5;
        }

        .footer-text {
            text-align: center;
            margin-top: 24px;
            font-size: 14px;
            color: #b3b3b3;
        }

            .footer-text a {
                color: #1a8917;
                text-decoration: none;
            }

                .footer-text a:hover {
                    text-decoration: underline;
                }

        .btn.loading {
            pointer-events: none;
            opacity: 0.7;
        }

            .btn.loading::after {
                content: '';
                width: 14px;
                height: 14px;
                border: 2px solid #ffffff;
                border-top-color: transparent;
                border-radius: 50%;
                display: inline-block;
                margin-left: 8px;
                animation: spin 0.6s linear infinite;
            }

        @@keyframes spin {
            to {
                transform: rotate(360deg);
            }
        }

        /* Responsive */
        @@media (max-width: 480px) {
            .login-container {
                padding: 40px 28px;
            }

            h2 {
                font-size: 24px;
            }

            .logo-text {
                font-size: 36px;
            }
        }
    </style>
</head>
<body>
    <div class="login-container">
        <div class="logo">
            <div class="logo-text">Task</div>
        </div>
        <h2>Welcome back</h2>
        <p class="subtitle">Sign in to continue to your account</p>

        <div id="message" class="message"></div>

        <!-- Regular Login Form -->
        <form id="login-form">
            <div class="form-group">
                <label>Username</label>
                <input type="text" id="username" placeholder="Enter your username" required>
            </div>
            <div class="form-group">
                <label>Password</label>
                <input type="password" id="password" placeholder="Enter your password" required>
            </div>
            <button type="submit" class="btn" id="login-btn">Sign In</button>
        </form>

        <div class="divider">or</div>

        <!-- Google Login Button -->
        <a href="@ViewBag.ApiBaseUrl/api/auth/google-login" class="google-btn">
            <svg class="google-icon" viewBox="0 0 24 24">
                <path fill="#4285F4" d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z" />
                <path fill="#34A853" d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z" />
                <path fill="#FBBC05" d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z" />
                <path fill="#EA4335" d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z" />
            </svg>
            Continue with Google
        </a>

        <div class="info-box">
            Click "Sign in" to agree to Task's Terms of Service and acknowledge that Task's Privacy Policy applies to you.
        </div>
    </div>

    <script>
        const API_URL = '@ViewBag.ApiBaseUrl';

        // Regular login
        document.getElementById('login-form').addEventListener('submit', async (e) => {
            e.preventDefault();

            const username = document.getElementById('username').value;
            const password = document.getElementById('password').value;
            const loginBtn = document.getElementById('login-btn');

            // Loading state
            loginBtn.classList.add('loading');
            loginBtn.textContent = 'Signing In';

            try {
                const response = await fetch(`${API_URL}/api/auth/login`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({ username, password })
                });

                const data = await response.json();

                if (response.ok) {
                    showMessage('Login successful!', 'success');
                    console.log("JWT Token:", data.token);

                    // JWT token saved
                    localStorage.setItem('jwtToken', data.token);

                    // Go to callback page
                    setTimeout(() => {
                        window.location.href = `/Login/Callback?token=${data.token}`;
                    }, 500);
                } else {
                    loginBtn.classList.remove('loading');
                    loginBtn.textContent = 'Sign In';
                    showMessage('Login failed: ' + (data.message || data), 'error');
                }
            } catch (error) {
                loginBtn.classList.remove('loading');
                loginBtn.textContent = 'Sign In';
                showMessage('Connection error: ' + error.message, 'error');
                console.error('Error:', error);
            }
        });

        function showMessage(text, type) {
            const messageDiv = document.getElementById('message');
            messageDiv.textContent = text;
            messageDiv.className = 'message ' + type;
            messageDiv.style.display = 'block';

            setTimeout(() => {
                messageDiv.style.display = 'none';
            }, 3000);
        }
    </script>
</body>
</html>
